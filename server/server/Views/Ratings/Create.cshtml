@model server.Models.Rating
<link rel="stylesheet" href="~/css/Create.css">

@{
    ViewData["Title"] = "Create";
}

<h1 class="create">Create</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RatingsCount" class="control-label"></label>
                <input asp-for="RatingsCount" class="form-control" />
                <span asp-validation-for="RatingsCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="createButton" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>

<div class="backList">
    <a asp-action="Index">Back to List </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
