@model IEnumerable<server.Models.Rating>
<link rel="stylesheet" href="~/css/Index.css">

@{
    ViewData["Title"] = "Index";
}

@section head {
    <style type="text/css">
    body {
        background-image: url('Resources/main_background_4.jpg');
        background-size: cover;
        color: ActiveBorder;
    }
    </style>
}

<h1 class="index" >Index</h1>

<p>
    <a class="createNew" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RatingsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>

            <th></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RatingsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a class="Edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="Details" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="Delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
