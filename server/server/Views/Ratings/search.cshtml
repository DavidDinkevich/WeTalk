@model IEnumerable<server.Models.Rating>

@{
    ViewData["Title"] = "Search";
    float sum = 0;
    float num_elements = 0;
    foreach (var item in Model) {
        sum += item.RatingsCount;
        num_elements += 1;
    }
    float average = sum / num_elements;
}

@section head {
    <style type="text/css">
    body {
        background-image: url('Resources/main_background_4.jpg');
        background-size: cover;
        color: ActiveBorder;
    }
    </style>
}

<h1>Rating</h1>
<h2>The average rating is : @average</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Search">
    <input name="query" id="search"/>
    <input type="submit" value="Search"/>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RatingsCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RatingsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

